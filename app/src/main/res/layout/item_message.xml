<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/regular_padding"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground">

    <androidx.cardview.widget.CardView
            android:layout_width="@dimen/message_max_width"
            android:layout_height="wrap_content"
            app:contentPadding="@dimen/small_padding"
            app:cardBackgroundColor="@color/colorMessageBackground"
            app:cardCornerRadius="4dp">

        <RelativeLayout
                android:id="@+id/messageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/messageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_padding"
                    tools:text="This is a message. Lorem ipsum dalat mi."/>

            <TextView
                    android:id="@+id/messageTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageText"
                    android:layout_alignParentEnd="true"
                    android:textColor="?android:textColorSecondary"
                    tools:text="3:53pm"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

