<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/generic_chip_area_container"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/chip_background_with_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/generic_chip_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="120dp"
            android:paddingStart="@dimen/large_padding"
            android:paddingEnd="@dimen/large_padding"
            android:textColor="@color/colorMessageBackground"
            tools:text="0401553443"/>

    <android.support.v4.widget.Space
            android:id="@+id/generic_chip_space"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

</LinearLayout>
